{
  "name": "dito-editor",
  "private": true,
  "version": "0.0.0",
  "description": "E-Dito desktop markdown editor",
  "author": "nac13k <nac13k@gmail.com>",
  "main": "dist/main/index.js",
  "type": "module",
  "scripts": {
    "dev": "concurrently -k \"npm:dev:renderer\" \"npm:dev:preload\" \"npm:dev:main\" \"npm:dev:electron\"",
    "dev:renderer": "vite --port 3137 --strictPort",
    "dev:preload": "tsc -p tsconfig.preload.json --watch --preserveWatchOutput",
    "dev:main": "tsc -p tsconfig.main.json --watch --preserveWatchOutput",
    "dev:electron": "wait-on http://localhost:3137 file:dist/main/index.js file:dist/preload/index.js && cross-env VITE_DEV_SERVER_URL=http://localhost:3137 electron .",
    "dev:electron:quiet": "wait-on http://localhost:3137 file:dist/main/index.js file:dist/preload/index.js && cross-env VITE_DEV_SERVER_URL=http://localhost:3137 ELECTRON_DEVTOOLS=false electron .",
    "build": "npm run build:renderer && npm run build:main",
    "icons:generate": "node scripts/generate-icons.mjs",
    "build:local": "node scripts/build-local.mjs",
    "build:final": "node scripts/build-final.mjs",
    "build:renderer": "vite build",
    "build:main": "tsc -p tsconfig.main.json && tsc -p tsconfig.preload.json",
    "lint": "eslint .",
    "preview": "vite preview",
    "cy:open": "cypress open",
    "cy:run": "cypress run",
    "cy:run:dev": "concurrently -k \"vite --port 3137 --strictPort\" \"wait-on http://localhost:3137 && cypress run\""
  },
  "dependencies": {
    "@codemirror/lang-markdown": "^6.5.0",
    "@codemirror/language-data": "^6.5.2",
    "@codemirror/theme-one-dark": "^6.1.3",
    "@uiw/react-codemirror": "^4.25.4",
    "chokidar": "^4.0.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "github-markdown-css": "^5.6.1",
    "i18next": "^24.2.2",
    "lucide-react": "^0.534.0",
    "markdown-it": "^14.1.0",
    "markdown-it-emoji": "^3.0.0",
    "mermaid": "^11.6.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-i18next": "^15.4.1",
    "simple-git": "^3.27.0",
    "tailwind-merge": "^2.6.0",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/markdown-it": "^14.1.2",
    "@types/markdown-it-emoji": "^3.0.1",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.1",
    "cross-env": "^7.0.3",
    "cypress": "^13.17.0",
    "electron": "^35.1.5",
    "electron-builder": "^26.7.0",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "icon-gen": "^5.0.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "tsx": "^4.20.5",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "^7.2.4",
    "wait-on": "^8.0.2"
  },
  "build": {
    "appId": "com.nac13k.edito",
    "productName": "E-Dito",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "public/icons/**/*",
      "package.json"
    ],
    "asar": true,
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "build/icons/edito.icns",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "linux": {
      "icon": "build/icons/edito-512.png",
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Office"
    },
    "win": {
      "icon": "build/icons/edito.ico"
    }
  }
}
